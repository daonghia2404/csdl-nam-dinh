mixin ButtonChildren({ title, icon })
  if (title)
    span.Button-control-title
      = title

  if (icon)
    span.Button-control-icon
      img(src=`${icon}`, alt="")

mixin Button({ className = '', type = 'button', size = 'middle', title, icon, reverse, link })
  .Button(class=`${className}`)
    button(type=`${type}`).flex.items-center.justify-center
      +ButtonChildren({ title, icon })
